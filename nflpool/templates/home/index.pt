<div metal:use-macro="view.layout">
    <div metal:fill-slot="main_content">


    <!-- Header -->
    <a name="about"></a>
        <div class="intro-header">
            <div class="container">

            <div class="row">
                <div class="col-lg-12">
                    <div class="intro-message">
                        <h1>NFLPool</h1>
                        <h2>Fantasy football for the lazy</h2>
                        <p>
                            <a class="btn btn-primary btn-lg" href="/standings" role="button">Standings</a>
                            <a class="btn btn-primary btn-lg" href="/picks/submit-picks" role="button">Submit Picks</a>
                            <a class="btn btn-primary btn-lg" href="/account/signin" role="button">Sign in</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>

        </div>


    <!-- /.intro-header -->

    <!-- Page Content -->

	<a  name="how-to-play"></a>
    <div class="content-section-a">

        <div class="container">
            <div class="row">
                <div class="col-lg-5 col-sm-6">

                    <div class="clearfix"></div>
                    <h2 class="section-heading">How to play</h2>
                    <p class="lead">Before the season starts, choose the teams who will win and lose
                        their divisions, which teams will make the playoffs, and individual leaders such as
                        passing, receiving, and sacks.
                    <br><br>
                        That's it!  No weekly picks.  No agonizing who to start or worrying about who is hurt.
                        Sit back, watch some football, and check the standings
                        as the season unfolds and see if your picks were right.
                    </p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <img class="img-responsive" src="/static/img/packers.jpg" alt="">
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->

    <div class="content-section-b">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-lg-offset-1 col-sm-push-6  col-sm-6">

                    <div class="clearfix"></div>
                    <h2 class="section-heading">Congratulations to our past winners</h2>
                    <p class="lead">
                        <ul>
                            <li>2016: Jerremy Norred</li>
                            <li>2015: George Thomas</li>

                        </ul>
                    </p>
                </div>
                <div class="col-lg-5 col-sm-pull-6  col-sm-6">
                    <img class="img-responsive" src="/static/img/matt-ryan.jpg" alt="">
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-b -->

    <div class="content-section-a">

        <div class="container">

            <div class="row">
                <div class="col-lg-5 col-sm-6">
                    <div class="clearfix"></div>
                    <h2 class="section-heading">Get Started</h2>
                    <p class="lead">What are you waiting for?  Create your account today and get ready to get your picks in.</p>
                </div>
                <div class="col-lg-5 col-lg-offset-2 col-sm-6">
                    <img class="img-responsive" src="/static/img/raiders.jpg" alt="">
                </div>
            </div>

        </div>
        <!-- /.container -->

    </div>
    <!-- /.content-section-a -->

	<a  name="contact"></a>
